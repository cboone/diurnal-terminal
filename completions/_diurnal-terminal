#compdef diurnal-terminal

_diurnal-terminal() {
  local -a commands options

  commands=(
    '--help:Show help'
    '--overwrite-plist:Create new plist scheduled for the next event'
    '--print-plist:Print plist scheduled for the next event'
    '--restart-agent:Reload the LaunchAgent'
    '--update-theme:Apply the correct theme for the current time'
  )

  options=(
    '(-h --help)'{-h,--help}'[Show help]'
    '(-v --verbose)'{-v,--verbose}'[Log output]'
    '--debug[Log more output]'
    '--day-theme[Override day theme from config]:theme:'
    '--night-theme[Override night theme from config]:theme:'
    '--overwrite-plist[Create new plist scheduled for the next event]'
    '--print-plist[Print plist scheduled for the next event]'
    '--restart-agent[Reload the LaunchAgent]'
    '--run-at-load[Run immediately when agent loads]'
    '--time[Override trigger time for plist generation]:time (HH\:MM\:SS):'
    '--update-theme[Apply the correct theme for the current time]'
  )

  _arguments -s $options
}

_diurnal-terminal "$@"
